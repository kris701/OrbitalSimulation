<UserControl x:Class="OrbitalSimulation.UserControls.OrbiterObjectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrbitalSimulation.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" Width="2000" Height="2000" IsHitTestVisible="False">
    <Grid ClipToBounds="False">
        <Ellipse x:Name="VisualEllipse" Fill="Blue" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="false"/>
        <Ellipse x:Name="VisualAtmEllipse" Fill="Blue" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="false" Opacity="0.5"/>
        <Label x:Name="VelocityLabel" Content="(0,0)" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="false"/>
        <Line x:Name="VelocityLine" X1="0" Y1="0" X2="50" Y2="50" Stroke="Red" StrokeThickness="1" IsHitTestVisible="false"/>
    </Grid>
</UserControl>
